            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#FB4A4A" Offset="0" />
                    <GradientStop Color="#2027CC" Offset="1" />
                </LinearGradientBrush>
            </Button.Background>
            <Button.Content>
                <TextBlock Text="Lưu" FontFamily="Raleway" FontStyle="Normal" FontWeight="Medium"
                   FontSize="23.625" LineHeight="35" TextAlignment="Center" Foreground="White"/>
            </Button.Content>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="17.5" >

                    </Setter>
                </Style>
            </Button.Resources>
        </Button>


        <Button HorizontalAlignment="Left" VerticalAlignment="Top"
        Width="163" Height="44"
        Margin="1004,799,0,0"
        Padding="17.5" Background="Transparent" Opacity="0.4">



            <Button.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#FB4A4A" Offset="-0.1093" />
                    <GradientStop Color="#2027CC" Offset="0.9961" />
                </LinearGradientBrush>
            </Button.BorderBrush>

            <Button.BorderThickness>
                <Thickness>1</Thickness>
            </Button.BorderThickness>

            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="12" >

                    </Setter>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</UserControl>
