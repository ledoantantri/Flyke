                        Margin="30,283,0,0"
                        Stroke="White" StrokeThickness="1"
                        HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Rectangle.Fill>
                            <SolidColorBrush Color="#FFFFFF" />
                        </Rectangle.Fill>
                    </Rectangle>
                </Grid>

                <Grid>
                    <Image 
                        Source="/Resources/Images/Icon/airplay.png" 
                        Margin="59,344,297,710"
                        />
                    <TextBlock
                        Width="220" Height="34"
                        Margin="112,340,52,705"
                        
