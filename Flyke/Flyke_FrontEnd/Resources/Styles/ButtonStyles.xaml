<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
        <Style x:Key="ButtonGradient" TargetType="Button">
            <Setter Property="Width" Value="324" />
            <Setter Property="Height" Value="72" />
            <Setter Property="Margin" Value="180,260,1032,732" />
            <Setter Property="Padding" Value="17,20,17,25" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="{StaticResource GradientBrush}" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#6467AD" BlurRadius="4" ShadowDepth="0" Direction="270" Opacity="0.25" />
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    <Style x:Key="ButtonGradient2" TargetType="Button">
        <Setter Property="Width" Value="324"/>
        <Setter Property="Height" Value="72"/>
        <Setter Property="Margin" Value="444,175,0,0"/>
        <Setter Property="Opacity" Value="0.5"/>
        <Setter Property="Padding" Value="17,20,17,25"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="0" Direction="270" Opacity="0.25"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{StaticResource GradientBrush}" BorderThickness="1" CornerRadius="15">
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#FB4A4A" Offset="0"/>
                                <GradientStop Color="#2027CC" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="ButtonGradient3" TargetType="Button">
        <Setter Property="Width" Value="324"/>
        <Setter Property="Height" Value="72"/>
        <Setter Property="Margin" Value="20,108.2,0,0"/>
        <Setter Property="Opacity" Value="0.5"/>
        <Setter Property="Padding" Value="17,20,17,25"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="0" Direction="270" Opacity="0.25"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{StaticResource GradientBrush}" BorderThickness="1" CornerRadius="15">
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#FB4A4A" Offset="0"/>
                                <GradientStop Color="#2027CC" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
