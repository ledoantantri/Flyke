                                <Grid>
                                    <Ellipse x:Name="Border" Width="20" Height="20" Stroke="Black" StrokeThickness="2"  >
                                        <Ellipse.Fill>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
